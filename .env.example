# Copy this file to .env and fill in secrets
# Comma separated API keys (primary source). Legacy single API_TOKEN still honored if set.
API_TOKENS=changeme-dev-token
# API_TOKEN=legacy-single-token

# Groq API Key (never commit the real key)
GROQ_API_KEY=your_groq_key_here

KILL_SWITCH=off
DETERMINISTIC_SEED=42

# Policy config
POLICY_DIR=policies
# Example explicit policy reload target
# POLICY_PATH=policies/valid.yaml

# Whitelisted directories for plan targets
AGENT_WHITELIST_DIRS=api,plans

# SQLite database path
DB_PATH=agent.db

# Logging
LOG_FILE=logs/app.log
LOG_LEVEL=INFO
